<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="log_url"
        android:title="@string/pref_title_log_url"
        android:defaultValue="@string/pref_default_log_url"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="access_token"
        android:title="@string/pref_title_access_token"
        android:defaultValue="@string/pref_default_access_token"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="log_method"
        android:title="@string/pref_title_log_method"
        android:entries="@array/pref_log_method_titles"
        android:entryValues="@array/pref_log_method_values"
        android:defaultValue="POST"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="local_filename"
        android:title="@string/pref_title_local_filename"
        android:defaultValue="@string/pref_default_local_filename"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="save_internally"
        android:title="@string/pref_title_save_internally"
        android:entries="@array/pref_save_internally_titles"
        android:entryValues="@array/pref_save_internally_values"
        android:defaultValue="true"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
